<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Command="{Binding GetWeatherCommand}">Get Weather</Button>
        <Label>
            <TabControl Height="400" Width="509">
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5" Margin="0,0,0.333,-179">
                        <Label Content="Temperature:" />
                        <Label Content="{Binding Temperature}" Margin="10, 20, -20, 0"/>
                        <Label Content="Location:" Margin="10,36,-25.667,10"/>
                        <Label Content="{Binding Location.City}" Margin="10,62,-25.667,0"/>
                    </Grid>
                </TabItem>
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </Label>
    </StackPanel>
</Window>
